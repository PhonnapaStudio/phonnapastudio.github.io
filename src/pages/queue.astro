            const rows = parsed.data || [];

            return rows.flatMap((r) => {
              const date = (r.date || r.DATE || "").trim?.() || "";
              const start = (r.start_time || r.start || "").trim?.() || "";
              const end = (r.end_time || r.end || "").trim?.() || "";
              const service = (r.service || "").trim?.() || "";
