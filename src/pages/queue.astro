        const iconPlay = btn.querySelector(".play");
        const iconPause = btn.querySelector(".pause");

        let isPlaying = false;

        function syncDiscUI() {
          btn.classList.toggle("spinning", isPlaying);
          iconPlay.style.display = isPlaying ? "none" : "";
          iconPause.style.display = isPlaying ? "" : "none";
          btn.setAttribute("aria-pressed", String(isPlaying));
        }

        async function tryPlay() {
          try {
            await audio.play();
            isPlaying = true;
            syncDiscUI();
            return true;
          } catch {
            return false;
          }
        }

        // Autoplay ‡πÅ‡∏ö‡∏ö‡∏ô‡∏∏‡πà‡∏°‡∏ô‡∏ß‡∏• + ‡πÄ‡∏Ñ‡∏≤‡∏£‡∏û autoplay policy
        async function startAutoplay() {
          try {
            audio.muted = true;
            await audio.play();
            isPlaying = true;
          } catch {}
          if (isPlaying) {
            setTimeout(async () => {
              audio.muted = false;
              await tryPlay();
            }, 200);
          } else {
            const once = async () => {
              window.removeEventListener("pointerdown", once, true);
              window.removeEventListener("keydown", once, true);
              window.removeEventListener("touchstart", once, true);
              (await tryPlay()) || 0;
            };
            window.addEventListener("pointerdown", once, {
              once: true,
              capture: true,
            });
            window.addEventListener("keydown", once, {
              once: true,
              capture: true,
            });
            window.addEventListener("touchstart", once, {
              once: true,
              capture: true,
            });
          }
          syncDiscUI();
        }

        btn.addEventListener("click", async () => {
          try {
            if (!isPlaying) {
              await tryPlay();
            } else {
              audio.pause();
              isPlaying = false;
            }
            syncDiscUI();
          } catch {
            alert("‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏•‡πà‡∏ô‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏™‡∏µ‡∏¢‡∏á‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÑ‡∏ü‡∏•‡πå /audio/lofi.mp3");
          }
        });

        // ‡∏Å‡∏£‡∏ì‡∏µ‡∏™‡∏•‡∏±‡∏ö‡πÅ‡∏ó‡πá‡∏ö‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤
        const retry = () => {
          if (!document.hidden && audio.paused) tryPlay();
        };
        document.addEventListener("visibilitychange", () => {
          if (!document.hidden) retry();
        });
        window.addEventListener("pageshow", retry);

        startAutoplay();
      });
    </script>
