              const isAvail = status === "available";
              return [
                {
                  title: isAvail ? `‡∏ß‡πà‡∏≤‡∏á: ${service}` : "‡∏à‡∏≠‡∏á‡πÅ‡∏•‡πâ‡∏ß",
                  start: `${date}T${start}:00`,
                  end: `${date}T${end}:00`,
                  extendedProps: { service, staff, status, note, date },
                  display: "block",
                  classNames: [isAvail ? "evt-available" : "evt-booked"],
                  // ‡πÉ‡∏™‡πà inline style ‡∏Å‡∏±‡∏ô‡∏Å‡∏£‡∏ì‡∏µ‡∏ò‡∏µ‡∏°‡∏ó‡∏±‡∏ö (‡∏ã‡πâ‡∏≥‡∏Å‡∏±‡∏ö CSS ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô‡πÉ‡∏´‡πâ‡∏ä‡∏±‡∏ß‡∏£‡πå)
                  backgroundColor: isAvail
                    ? getComputedStyle(document.documentElement)
                        .getPropertyValue("--avail-bg")
                        .trim()
